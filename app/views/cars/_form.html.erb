<%= form_for(@car, html: { class: 'form-horizontal' }) do |f| %>
  <% if @car.errors.any? %>
    <div class="panel panel-danger">
      <div class="panel-heading">
        <%= pluralize(@car.errors.count, "error") %> prohibited this car from being saved:
      </div>
      
      <div class="panel-body">
        <ul>
        <% @car.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :weight, class: 'col-md-3 control-label' %>
    <div class="col-md-9">
      <%= f.text_field :weight, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :fuel_tank_capacity, class: 'col-md-3 control-label' %>
    <div class="col-md-9">
      <%= f.text_field :fuel_tank_capacity, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :gas_per_kilometer, class: 'col-md-3 control-label' %>
    <div class="col-md-9">
      <%= f.text_field :gas_per_kilometer, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :tire_radious, class: 'col-md-3 control-label' %>
    <div class="col-md-9">
      <%= f.text_field :tire_radious, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :name, class: 'col-md-3 control-label' %>
    <div class="col-md-9">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-md-9 col-md-offset-3">
      <%= f.submit class: 'btn btn-success' %>
    </div>
  </div>
<% end %>
