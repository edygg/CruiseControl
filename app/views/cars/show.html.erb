<div class="col-md-8 col-md-offset-2">
  <div class="page-header">
    <h1>Cars <small><%= @car.name %></small></h1>
  </div>
  
  <% unless notice.nil? || notice.empty? %>
    <div class="alert alert-info"><%= notice %></div>
  <% end %>
  
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <ul class="list-group">
        <li class="list-group-item">
          <span class="badge"><%= @car.weight %></span>
          Weight:
        </li>
        <li class="list-group-item">
          <span class="badge"><%= @car.fuel_tank_capacity %></span>
          Fuel tank capacity:
        </li>
        <li class="list-group-item">
          <span class="badge"><%= @car.gas_per_kilometer %></span>
          Gas per kilometer:
        </li>
        <li class="list-group-item">
          <span class="badge"><%= @car.tire_radious %></span>
          Tire radious:
        </li>
      </ul>
    </div>
  </div>
  
  <div class="btn-group">
    <%= link_to 'Edit', edit_car_path(@car), class: 'btn btn-info' %>
    <%= link_to 'Back', cars_path, class: 'btn btn-default' %>
  </div>
  
</div>
